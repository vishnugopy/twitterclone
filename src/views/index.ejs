<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Twitter</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="/images/iconTwitter.png">
</head>

<body>
  <section class="section-accueil">

    <div class="tweet-navigation">
      <img class="tweet-navigation-image" src="/images/logoTwitter.png" alt="">
      <div class="tweet-navigation-link">
        <a href="/">
          <img src="/images/home-run.png" alt="">
          <h2>Home</h2>
        </a>
        <a href="">
          <img src="/images/hastag.png" alt="">
          <h2>Explore</h2>
        </a>
        <a href="">
          <img src="/images/bookmark.png" alt="">
          <h2>Bookmarks</h2>
        </a>
        <a href="/username">
          <img src="/images/user.png" alt="">
          <h2>My Tweets</h2>
        </a>
        <a href="/logout">
          <img src="/images/logout.png" alt="">
          <h2>Logout</h2>
        </a>
      </div>
    </div>

    <div class="tweet-container">
      <div class="tweet-container-title">
        <% if (user) { %>
          <h3>Welcome back<%= `   ${user.username}` %> ðŸ˜€</h3>
    
        <% } else { %>
          <a href="/login">Se connecter</a>
          <a href="/signup">S'inscrire</a>
        <% } %>
      </div>
      <form action="/tweet" method="post" class="tweet-container-form">
        <div class="tweet-container-message">
          <label for="content"></label>
          <div class="tweet-container-text">
            <textarea name="content" id="message" placeholder="Whats's happening ?"></textarea>
            <input class="hide" type="text" id="userid" name="userid" value="<%= user.id %>">
            <input class="hide" id="datePicker" type="date" value="" name="createsAt">
          </div>

        </div>
        <div class="tweet-container-button">
          <button type="submit" class="tweet-button">Tweet</button>
        </div>

      </form>

      <div class="comments">

        <% tweets.forEach((tweet)=>{ %>

        <div class="comments-comment">
          <a href="/username/<%= tweet.userid  %>"><img src="./images/user.png" alt=""></a>
          <div class="comments-comment-content">
            <div class="comments-comment-content-nameDate">
              <a href="/username/<%= tweet.userid %>">
                <h3 class="comments-comment-content-username"><%= tweet.username %></h3>
              </a>
              <span class="comments-comment-content-date"><%= tweet.createsAt %></span>
            </div>
            <p class="comments-comment-content-text"><%= tweet.content %></p>
          </div>
        </div>


        <% })%>

  

      </div>

    </div>

    <div class="tweet-search"></div>

  </section>
  <script>
    document.getElementById('datePicker').valueAsDate = new Date();
  </script>
</body>

</html>